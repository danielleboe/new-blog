<!-- views/single-post.handlebars -->
<link rel="stylesheet" href="/css/styles.css">

<div class="p-container">
<h1>{{post.post_title}}</h1>
<p>{{post.post_txt}}</p>
<p>Posted by {{post.user.username}}</p>
 <p id="post-create"><small>Posted on {{formatDate post.createdAt}}</small></p>

<h2>Comments</h2>
{{#each post.comments}}
  <p><strong>{{this.user.username}}:</strong> {{this.comment_txt}}</p>
  <p><small>Posted on {{formatDate this.createdAt}}</small></p>
{{/each}}

<div class="comment-container">

{{#if logged_in}}
  <form id="comment-form">
    <input type="hidden" value="{{post.id}}" id="post_id"/>
    <textarea name="comment_text" id="comment-text" rows="3"></textarea><br>
    <button type="submit" class="comment-button">Add Comment</button>
  </form>
{{else}}
 <div class="login-button-div">
        <button onclick="document.getElementById('login-modal').style.display='block'" class="login-button">
            LOG IN TO COMMENT
        </button>
    </div>
{{/if}}
</div>

</div>

 <script src="/js/post.js" type="text/javascript"></script>